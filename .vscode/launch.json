{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Backend Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "NextJS Server",
      "command": "./node_modules/.bin/next dev",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}