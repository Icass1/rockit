  /*{ 
    href: "#", 
    label: "Test", 
    icon: `
      <img src="path/to/icon.png" alt="Test for an album" width="20" height="20">
    `
  },*/
];
---


<div class="sidebar" id="sidebar">
  <button id="toggle-button">â˜°</button>
  <nav>
    <ul>
      {links.map(link => (
        <li>
          <a href={link.href} aria-label={link.label}>
            <div class="icon" set:html={link.icon}></div>
            <!-- <span class="icon-text">{link.label}</span> -->
          </a>
        </li>
      ))}
    </ul>
  </nav>
</div>


<style>
  /* Estilos del sidebar basados en tu archivo styles.css */
  .sidebar {
    position: relative;
    width: 60px;
    background: #000;
    color: white;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    bottom: 0;
    transition: width 0.3s ease;
  }

  .sidebar.active {
    width: 250px;
  }

  .sidebar nav ul {
    list-style: none;
    padding: 0;
    margin: 100px 0;
    text-align: center;
  }

  .sidebar nav ul li {
    margin: 20px 10px;
  }

  .sidebar nav ul li a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    height: auto;
    padding: 5px 5px;
  }

  .sidebar nav ul li a .icon {
    
    width: 22px;
    transition: margin-left 0.3s ease;
  }

  .sidebar.active nav ul li a .icon {
    margin-left: 30px;
  }

  /*.sidebar nav ul li a .icon-text {
    display: inline-block;
    font-size: 17px;
    opacity: 0;
    transform: translateX(-20px);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }*/

  .sidebar.active nav ul li a .icon-text {
    opacity: 1;
    transform: translateX(0);
  }

  #toggle-button {
    position: fixed;
    top: 20px;
    left: 5px;
    background: #000;
    border: none;
    color: white;
    font-size: 22px;
    cursor: pointer;
    z-index: 1000;
    padding: 10px;
    margin: 0;
    width: 50px;
    text-align: center;
  }
</style>