<header class="w-full z-50 flex items-center justify-between p-4 text-white">
    <!-- Logo a la izquierda -->
    <div class="flex items-center">
        <img src="/logo-banner.png" alt="Logo" class="h-10 ml-11" />
    </div>

    <!-- Barra de búsqueda en el centro -->
    <div class="flex-grow mx-4">
        <input
            class="font-semibold mx-auto rounded-full block text-1xl px-10 w-1/3 py-1.5 focus:outline-0"
            style={{
                backgroundImage: "url(/search-icon.png)",
                backgroundPosition: "15px center",
                backgroundSize: "14px",
                backgroundRepeat: "no-repeat",
            }}
            placeholder="Search a song or artist..."
        />
    </div>

    <!-- Texto "unknown" y círculo gris a la derecha -->
    <div class="flex items-center space-x-4">
        <span>Unknown</span>
        <div class="w-8 h-8 bg-gray-400 rounded-full"></div>
    </div>
</header>
