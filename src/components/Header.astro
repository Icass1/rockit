---
import SearchBar from "@/components/SearchBar";
import { LogOut,Settings } from "lucide-react";
---

<header
    class="w-full z-50 grid grid-cols-[200px_3fr_200px] justify-between pl-4 pr-4 py-4 text-white"
>
    <!-- Logo a la izquierda -->
    <a href="/" class="flex items-center select-none">
        <img src="/logo-banner.png" alt="Logo" class="h-14" />
    </a>

    <SearchBar client:only="react" />

    <!-- User Settings -->
    <div class="relative ml-auto">
        <!-- Botón para abrir/cerrar el menú -->
        <button
            id="toggleMenuButton"
            class="flex items-center space-x-4 hover:bg-[#272727] p-3 hover:cursor-pointer rounded-lg"
        >
            <span class="font-medium">{Astro.locals.user?.username}</span>
            <div
                class="w-10 h-10 bg-gray-400 rounded-full overflow-hidden flex items-center justify-center"
            >
                <img
                    src="/user-placeholder.png"
                    alt="User avatar"
                    class="w-full h-full object-cover"
                />
            </div>
        </button>
    
        <!-- Menú desplegable -->
        <div
            id="userMenu"
            class="opacity-0 absolute right-0 mt-2 w-48 bg-[#2f2f2f] shadow-lg rounded-lg z-40 transition-all"
        >
            <ul class="text-white">
                <li
                    class="hover:bg-[#4f4f4f] flex items-center p-3 space-x-2 cursor-pointer rounded-t-lg"
                    data-action="settings"
                >
                    <Settings />
                    <span>Settings</span>
                </li>
                <li
                    class="hover:bg-[#4f4f4f] flex items-center p-3 space-x-2 cursor-pointer rounded-b-lg"
                    data-action="signout"
                >
                    <LogOut />
                    <span>Sign Out</span>
                </li>
            </ul>
        </div>
    </div>
    
    <script>
        // Obtener referencias a los elementos
        const toggleButton = document.getElementById('toggleMenuButton') as HTMLDivElement;
        const menu = document.getElementById('userMenu') as HTMLDivElement;
        
        // Mostrar/ocultar el menú al hacer clic en el botón
        toggleButton.addEventListener('click', (event) => {
            event.stopPropagation();
            menu.classList.toggle('opacity-0');
            toggleButton.classList.toggle('bg-[#2f2f2f]');
            menu.classList.toggle('pointer-events-none');
        });

        document.addEventListener('click', (event) => {
            if (!menu.contains(event.target as Node) && !toggleButton.contains(event.target as Node)) {
                menu.classList.add('opacity-0');
                toggleButton.classList.remove('bg-[#2f2f2f]');
                menu.classList.add('pointer-events-none');
            }
        });

        
        // Manejar las acciones del menú
        menu.querySelectorAll('li').forEach((item) => {
            item.addEventListener('click', () => {
            const action = item.getAttribute('data-action');
            if (action === 'settings') {
                window.location.href = '/settings';
            } else if (action === 'signout') {
                alert('Signed out! (Cambia esto inasio)');
            }
            });
        });
    </script>    
</header>