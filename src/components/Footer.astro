---
import { Play } from "lucide-react";

import FooterCenter from "@/components/FooterCenter";
import FooterLeft from "@/components/FooterLeft";
import TogglePlayerUI from "@/components/TogglePlayerUI";
import VolumeSlider from "./VolumeSlider";
---

<footer
    class="bg-[#1a1a1a] text-white md:py-4 md:px-5 px-2 py-2 w-full md:h-24 box-border z-50"
>
    <div class="flex md:justify-center items-center w-full h-full">
        <!-- Sección Izquierda -->
        <FooterLeft client:only="react" />

        <!-- Sección Central (solo visible en pantallas medianas y más grandes) -->
        <FooterCenter client:only="react" />

        <!-- Sección Derecha (Dispositivos grandes): Volumen -->
        <div
            class="hidden md:flex items-center w-1/3 h-full justify-end gap-x-3 group"
        >
            <VolumeSlider client:only="react" />
            <TogglePlayerUI client:only="react" />
        </div>

        <!-- Sección Derecha: Solo visible en pantallas pequeñas -->
        <div
            class="flex md:hidden items-center w-[10%] h-full justify-end pr-3 md:pr-0 gap-x-3 group"
        >
            <Play className="w-5 h-5 text-white fill-current" />
        </div>
    </div>
</footer>
