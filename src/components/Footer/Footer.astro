---
import FooterCenter from "@/components/Footer/FooterCenter";
import FooterLeft from "@/components/Footer/FooterLeft";
import TogglePlayerUI from "@/components/TogglePlayerUI";
import VolumeSlider from "@/components/VolumeSlider";
import PictureInPictureImage from "@/components/PictureInPicture";

import "@/styles/Skeleton.css";
---

<footer
    class="md:bg-[#1a1a1a] text-white md:py-4 md:px-5 px-2 pt-2 w-full md:h-24 box-border"
>
    <div
        class="flex md:justify-center justify-between items-center w-full h-full"
    >
        <!-- Secci칩n Izquierda -->
        <FooterLeft client:only="react" server:defer transition:persist>
            <!-- Temporary div while loading FooterCenter -->
            <div
                slot="fallback"
                class="relative w-full md:w-1/3 max-w-full min-w-0 h-full"
            >
                <div class="w-full skeleton min-h-0 h-full absolute rounded-lg">
                </div>
            </div>
        </FooterLeft>

        <!-- Secci칩n Central (solo visible en pantallas medianas y m치s grandes) -->
        <FooterCenter client:only="react" server:defer transition:persist>
            <!-- Temporary div while loading FooterCenter -->
            <div
                slot="fallback"
                class="relative flex items-center w-full md:w-1/3 max-w-full min-w-0 gap-x-4 h-full rounded-lg"
            >
                <div class="w-full skeleton min-h-0 h-full absolute rounded-lg">
                </div>
            </div>
        </FooterCenter>

        <!-- Secci칩n Derecha (Dispositivos grandes): Volumen -->
        <div
            class="hidden md:flex items-center w-1/3 h-full justify-end gap-x-5 group"
        >
            <PictureInPictureImage client:only="react" />
            <VolumeSlider client:only="react" />
            <TogglePlayerUI client:only="react" />
        </div>
    </div>

</footer>
