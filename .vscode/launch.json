{
  "version": "0.3.0",
  "compounds": [
    {
      "name": "Run Full Stack (Backend + Frontend)",
      "configurations": [
        "FastAPI Uvicorn",
        "NextJS Server",
        "WebSocket Server"
      ]
    },
    {
      "name": "Run Frontend Only (NextJS + WebSocket Server)",
      "configurations": [
        "NextJS Server",
        "WebSocket Server"
      ]
    }
  ],
  "configurations": [
    {
      "name": "FastAPI Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
      ],
      "justMyCode": false
    },
    {
      "name": "FastAPI Uvicorn (DEBUG)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
        "--reload"
      ],
      "justMyCode": false
    },
    {
      "name": "NextJS Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "WebSocket Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.mjs",
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "DB Migration Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/db/dbMigration.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}